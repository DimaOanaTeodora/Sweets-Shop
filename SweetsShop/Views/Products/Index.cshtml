


<h1 class="text-center">Galaxia dulciurilor</h1>
<h2 class="text-center">@ViewBag.Message</h2>
<hr />
@if (ViewBag.butoaneSortari == true)
{
    <div class="text-center">

        <a class="btn btn-primary btn-lg" style="background-color: #2C3A47; box-shadow: 0 10px 10px #D6A2E8;" href="/Products/SortarePret">

            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M14 2.5a.5.5 0 0 0-.5-.5h-6a.5.5 0 0 0 0 1h4.793L2.146 13.146a.5.5 0 0 0 .708.708L13 3.707V8.5a.5.5 0 0 0 1 0v-6z"></path>
            </svg>
            pret
        </a>
        <a class="btn btn-primary btn-lg" style="background-color: #2C3A47; box-shadow: 0 10px 10px #D6A2E8;" href="/Products/SortareRating">

            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M14 13.5a.5.5 0 0 1-.5.5h-6a.5.5 0 0 1 0-1h4.793L2.146 2.854a.5.5 0 1 1 .708-.708L13 12.293V7.5a.5.5 0 0 1 1 0v6z"></path>
            </svg>
            rating
        </a>
    </div>
}
else
{
    <a class="btn btn-primary btn-lg" style="background-color: #25CCF7; box-shadow: 0 10px 10px #D6A2E8;" href="/Products/Index">
        Înapoi
    </a>
}


<div class="container">
    <br />
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <form class="card card-sm" method="GET">
                <div class="card-body row no-gutters align-items-center">


                    <input class="form-control form-control-lg form-controlborderless" type="text" name="search"
                           value="@ViewBag.SearchString"
                           placeholder="Search topics or keywords">


                    <button class="btn btn-success" style="background-color: #25CCF7; box-shadow: 0 10px 10px #D6A2E8;" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path>
                        </svg>
                        Search
                    </button>


                </div>
            </form>
        </div>
        <!--end of col-->
    </div>
</div>

<hr />


<div class="row">
    @foreach (SweetsShop.Models.Product product in ViewBag.Products)
    {
        if (product.Request == true)
        {

            @Html.Partial("ProductInfo", product)
           

        }
    }
</div>



<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                @if (ViewBag.search != "")
                {
                    <a href="/Products/Index?page=1&search=@ViewBag.SearchString"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                }
                else
                {
                    <a href="/Products/Index?page=1" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                }
            </li>
            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                if (ViewBag.search != "")
                {
                    <li>
                        <a href="/Products/Index?page=@i&search=@ViewBag.SearchString">@(i)</a>
                    </li>
                }
                else
                {
                    <li><a href="/Products/Index?page=@i">@(i)</a></li>
                }
            }
            <li>
                @if (ViewBag.search != "")
                {
                    <a href="/Products/Index?page=@(ViewBag.lastPage)&search=@ViewBag.SearchString" arialabel="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                }
                else
                {
                    <a href="/Products/Index?page=@(ViewBag.lastPage)" arialabel="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                }
            </li>
        </ul>
    </nav>
</div>
